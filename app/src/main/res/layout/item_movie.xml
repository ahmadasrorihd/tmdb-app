<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/val_4_dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/cvItem">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@color/grey"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivThumbnail"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginStart="@dimen/val_8_dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivThumbnail"
                android:layout_marginTop="@dimen/val_8_dp"
                tools:text="@string/txt_title" />

            <TextView
                android:layout_marginBottom="@dimen/val_8_dp"
                android:layout_marginStart="@dimen/val_8_dp"
                android:layout_marginTop="@dimen/val_4_dp"
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                tools:text="@string/txt_date" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>